<% content_for(:title, "Joss Monster | Skill") %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
    <h1 class="main-title"><%= @skill.name %></h1>
    </div><!-- end of col 12 -->
  </div><!-- end of row 1 -->
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="skill-description-area">
        <p class="skill-description"><%= @skill.description %></p>
      </div>
      <p class="btn-default"><%= link_to "Edit Skill", edit_skill_path(@skill) %></p>
      <p class="btn-default"><%= link_to "Delete Skill", skill_path(@skill),
                          :data => {:confirm => "Confirm?",
                          :method => "delete"} %></p>

      <% if @skill.projects.any? %>
        <h4 class="sub-title">Related Projects:</h4>

        <ul class="project-list">
          <% @skill.projects.each do |project| %>
            <li class="project-items">
              <%= link_to project.title, skill_project_path(@skill, project)%>
              
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no projects yet!</p>
      <% end %>

      <p><%= link_to "Add a Project", new_skill_project_path(@skill) %></p>
      <p><%= link_to "Return to skills", skills_path %></p>
    </div><!-- end of col offset -->
  </div><!-- end of row 2 -->
</div><!-- end of container -->